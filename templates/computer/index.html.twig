{% extends 'base.html.twig' %}

{% block title %}Computer index{% endblock %}

{% block body %}
    <h1>Computer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Modele</th>
                <th>Description</th>
                <th>Prix</th>
                <th>AnneeSortie</th>
                <th>NumeroSerie</th>
                <th>Image</th>
                <th>Is_visible</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for computer in computers %}
            <tr>
                <td>{{ computer.id }}</td>
                <td>{{ computer.modele }}</td>
                <td>{{ computer.description }}</td>
                <td>{{ computer.prix }}</td>
                <td>{{ computer.anneeSortie }}</td>
                <td>{{ computer.numeroSerie }}</td>
                <td>{{ computer.image }}</td>
                <td>{{ computer.isVisible ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_computer_show', {'id': computer.id}) }}">show</a>
                    <a href="{{ path('app_computer_edit', {'id': computer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_computer_new') }}">Create new</a>
{% endblock %}
